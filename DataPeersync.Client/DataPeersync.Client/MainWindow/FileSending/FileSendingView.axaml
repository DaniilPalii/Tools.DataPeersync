<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:DataPeersync.Client.MainWindow.FileSending"
	x:Class="DataPeersync.Client.MainWindow.FileSending.FileSendingView"
	x:DataType="local:FileSendingViewModel"
>
	<Design.DataContext>
		<local:FileSendingViewModel />
	</Design.DataContext>

	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
		<TextBlock Text="File sending" FontWeight="Bold" />
		<WrapPanel>
			<TextBlock Text="Ip address: " />
			<TextBox Text="{Binding IpString}" />
		</WrapPanel>
		<WrapPanel>
			<TextBlock Text="Port: " />
			<TextBox Text="{Binding Port}" />
		</WrapPanel>
		<WrapPanel>
			<TextBlock Text="File path: " />
			<TextBox Text="{Binding FilePath}" />
		</WrapPanel>
		<Button
			Name="BackToMenuButton"
			Content="Back to menu"
			Command="{Binding GoToMainMenu}"
		/>
		<Button Name="SendFileButton" Command="{Binding Send}">Send file</Button>
		<TextBlock Text="{Binding Status}" />
	</StackPanel>
</UserControl>

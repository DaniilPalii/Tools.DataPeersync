<?xml
	version="1.0"
	encoding="utf-8"?>

<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:main="clr-namespace:DataPeersync.Client.Maui.Pages.Main"
	x:Class="DataPeersync.Client.Maui.Pages.Main.MainPage"
	x:DataType="main:MainPageModel"
	Title="Data Peersync">

	<ScrollView>
		<VerticalStackLayout
			Spacing="25"
			Padding="30,0"
			VerticalOptions="Center"
			HorizontalOptions="Center">

			<Image
				Source="dotnet_bot.png"
				SemanticProperties.Description="Cute dot net bot waving hi to you!"
				HeightRequest="200" />

			<Label
				Text="Welcome to Data Peersync!"
				SemanticProperties.HeadingLevel="Level1"
				FontSize="28" />

			<Button
				x:Name="SendFileButton"
				Text="Send file"
				Command="{Binding NavigateToSendFilePageCommand}" />

			<Button
				x:Name="ReceiveFileButton"
				Text="Receive file"
				Command="{Binding NavigateToReceiveFilePageCommand}" />

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>

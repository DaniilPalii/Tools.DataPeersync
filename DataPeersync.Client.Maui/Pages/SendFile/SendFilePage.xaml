<?xml
	version="1.0"
	encoding="utf-8"?>

<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="DataPeersync.Client.Maui.Pages.SendFile.SendFilePage"
	Title="Send File">

	<ScrollView>
		<VerticalStackLayout
			Spacing="25"
			Padding="30,0"
			VerticalOptions="Center"
			HorizontalOptions="Center">

			<HorizontalStackLayout Spacing="2">
				<Label Text="IP:" />
				<Entry x:Name="IpEntry" />
			</HorizontalStackLayout>

			<HorizontalStackLayout Spacing="2">
				<Label Text="Port:" />
				<Entry x:Name="PortEntry" />
			</HorizontalStackLayout>

			<HorizontalStackLayout Spacing="2">
				<Label Text="File Path:" />
				<Label x:Name="FilePathLabel" />
				<Button x:Name="BrowseButton" Text="Browse" />
			</HorizontalStackLayout>

			<Button x:Name="SendFileButton" Text="Send File" />

			<Label x:Name="StatusLabel" />

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>

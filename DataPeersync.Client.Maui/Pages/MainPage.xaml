<?xml version="1.0" encoding="utf-8"?>

<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="DataPeersync.Client.Maui.Pages.MainPage"
	Title="Data Peersync">

	<ScrollView>
		<VerticalStackLayout>

			<Image Source="dotnet_bot.png" HeightRequest="200" />

			<Label
				Text="Welcome to Data&#160;Peersync!"
				SemanticProperties.HeadingLevel="Level1"
				FontSize="28" />

			<Button
				x:Name="SendFileButton"
				Text="Send File"
				Clicked="SendFileButton_OnClicked" />

			<Button
				x:Name="ReceiveFileButton"
				Text="Receive File"
				Clicked="ReceiveFileButton_OnClicked" />

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
